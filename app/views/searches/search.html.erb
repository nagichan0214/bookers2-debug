
<table class='table'>
  <thead>
    <tr>
      <% if @range == "User" %>
     <h2>users search for "<%= @word %>"</h2>
      <th>Image</th>
      <th>Name</th>
      <% else %>
        <h2>books search for "<%= @word %>"</h2>
       <th>Image</th>
       <th>Title</th>
       <th>Opinion</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <% if @range == "User" %>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
    <td><%= user.name %></td>
  </tr>
  <% end %>
  </tbody>
  <% else %>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>